declare "logs" {
    loki.write "default" {
        endpoint {
            url = strings.format("https://%s:%s@%s/loki/api/v1/push",
                sys.env("ALLOY_LOKI_USERNAME"),
                sys.env("ALLOY_LOKI_PASSWORD"),
                sys.env("LOKI_ENDPOINT"))
        }
    }

    export "receiver" {
        value = loki.write.default.receiver
    }
}
